<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AIlable"
             x:Class="AIlable.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AIlable/Styles/LightTheme.axaml" />
        <StyleInclude Source="avares://AIlable/Styles/CommonStyles.axaml" />
        <StyleInclude Source="avares://AIlable/Styles/NotificationStyles.axaml" />
    </Application.Styles>
</Application>